{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "Node"
    },
    "include": ["src/**/*", "**/*.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}